sudo-disable() {
  if [[ ${sudoers_enabled} == true && ${skip_sudo_disable} == false ]]; then
    pu-print-section-header "${txtblk}${bakylw}" "Disabling sudo without a password... "
    run "sudo rm -f /private/etc/sudoers.d/${USER} # hide-command"
  fi
  unset sudoers_enabled
}
