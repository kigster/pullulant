function atom {
  status=0
  run "rsync -a ${rsync_atom_dir} ${HOME}/.atom"
  if [ -z "$apm" ]; then
    run "printf \"${bldylw} It looks like you don't have *apm* installed â€“ it comes with Atom.\n\""
    run "printf \"${bldwht} Please make sure you have the latest Atom installed, then re-run\n"
  else
    run "$apm install  --packages-file ${HOME}/.atom/packages.txt # show-stdout"
  fi
  return $status
}
