source ${HOME}/.bash_safe_source

export LANG=en_US.UTF-8
export LC_ALL=en_US.UTF-8
export MANPATH="/usr/local/opt/gnu-sed/libexec/gnuman:$MANPATH"
export PGUSER=postgres
export EDITOR=vim
export PAGER='less -R'
export RI='-f ansi'
export HISTCONTROL=ignoredups

declare -a sources=(
  ${HOME}/.bash_pu_bashmatic
  ${HOME}/.bash_pu_aliases
  ${HOME}/.bash_pu_aliases_ag
  ${HOME}/.bash_pu_colors
  ${HOME}/.bash_pu_functions
  ${HOME}/.bash_pu_git
  ${HOME}/.bash_pu_gpg
  ${HOME}/.bash_pu_grep
  ${HOME}/.bash_pu_pgsql
  ${HOME}/.bash_pu_user
  ${HOME}/.bash_pu_bash_it tango
)

src "${sources[@]}"

# Load rbenv and pyenv without th expensive eval.
for env in rbenv pyenv; do
  dir="${HOME}/.${env}/shims"
  if [[ -d "${dir}" ]] ; then
    export PATH="${dir}:$PATH"
  fi
done


 


