#export NOKOGIRI_USE_SYSTEM_LIBRARIES=1

export LANG=en_US.UTF-8
export LC_ALL=en_US.UTF-8
export WS=$HOME/workspace
export NODE_PATH=/usr/local/share/npm
export PATH="$HOME/.rbenv/shims:$HOME/.pyenv/shims:$HOME/bin:/usr/local/bin:/usr/local/sbin:$NODE_PATH/bin:/usr/bin:/bin:/usr/sbin:/sbin"
export GOPATH=$HOME/$WS/golang
export PATH=$PATH:/usr/local/opt/go/libexec/bin:$GOPATH/bin
export MANPATH="/usr/local/opt/gnu-sed/libexec/gnuman:$MANPATH"
export PGUSER=postgres
export EDITOR=vim
export PAGER='less -R'
export RI='-f ansi'

function user.locals() {
  declare -a scripts=($(ls -1 ~/.bash_pu_*[^bak]))
  for script in ${scripts[@]} ~/.bash_${USER}; do
    [[ -s "${script}" ]] && source "${script}"
  done
}

user.locals
