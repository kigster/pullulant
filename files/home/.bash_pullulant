#export NOKOGIRI_USE_SYSTEM_LIBRARIES=1

export LANG=en_US.UTF-8
export LC_ALL=en_US.UTF-8
export WS=$HOME/workspace
export NODE_PATH=/usr/local/share/npm
export PATH="$HOME/.rbenv/shims:$HOME/.pyenv/shims:$HOME/bin:/usr/local/bin:$NODE_PATH/bin:/usr/bin:/bin:/usr/sbin:/sbin"
export GOPATH=$HOME/$WS/golang
export PATH=$PATH:/usr/local/opt/go/libexec/bin:$GOPATH/bin
export MANPATH="/usr/local/opt/gnu-sed/libexec/gnuman:$MANPATH"
export PGUSER=postgres
export EDITOR=vim

declare -a scripts=(.bash_pu_colors .bash_pu_functions .bash_pu_docker .bash_pu_services .bash_pu_aliases .bash_${USER} )

function load_locals() {
  printf "${bakblu}Loading in: "
  for script in ${scripts[@]}; do
    printf "${bldgrn}${script}${txtrst} "
    if [ -s "${HOME}/${script}" ]; then
      source "${HOME}/${script}"
    else
      printf "\n${txtrst}${bldred}${script}${txtrst} was not found, ignoring.${txtrst}\n"
    fi
  done
  printf "\n"
}

load_locals


