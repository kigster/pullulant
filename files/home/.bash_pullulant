set +e

function src() {
  [[ -f $1 ]] && source "$1"
}

export LANG=en_US.UTF-8
export LC_ALL=en_US.UTF-8
export MANPATH="/usr/local/opt/gnu-sed/libexec/gnuman:$MANPATH"
export PGUSER=postgres
export EDITOR=vim
export PAGER='less -R'
export RI='-f ansi'
export HISTCONTROL=ignoredups
export PU_ARCHIVE="${HOME}/.pullulant_archive"
mkdir -p ${PU_ARCHIVE}

mv ${HOME}/.bash_pu*~pu.bak ${PU_ARCHIVE} >/dev/null 2>&1

eval "$( cat ${HOME}/.bash_pu_* )"

