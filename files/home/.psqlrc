-- don't output commands as we run them
\set QUIET 1
-- set how to output numbers (this turns on thousdand separators)
-- \pset numericlocale
-- stop using less to page output
\pset pager
-- By default, NULL displays as an empty space. Is it actually an empty
-- string, or is it null? This makes that distinction visible.
\pset null 'NULL'
-- set prompts
\set PROMPT1 '%M:%> %[%033[1;33m%]%n%[%033[0m%]@%[%033[1;32m%]%/%[%033[0m%]%R%#%x '
\set PROMPT2 'â†³  [%[%033[1;32m%]%/%[%033[0m%]]%R%#%x '
-- Autocomplete keywords (like SELECT) in upper-case, even if you started
-- typing them in lower case.
\set COMP_KEYWORD_CASE upper
-- If a command is run more than once in a row, only store it once in the history.
\set HISTCONTROL ignoredups
-- Use a separate history file per-database.
\set HISTFILE ~/.psql_history- :DBNAME
-- Use table format (with headers across the top) by default, but switch to
-- expanded table format when there's a lot of data, which makes it much
-- easier to read.
\x auto
-- Verbose error reports.
\set VERBOSITY verbose
\encoding unicode
\echo 'What is up!'
\echo 'Type :version to see the PostgreSQL version.'
\echo 'Type :extensions to see the available extensions.'
\echo 'Type :active to see all currently executing queries.'
\echo 'Type :top5 to see top 5 time consuming queries as reported by pg_stat_statements.'
\echo 'Type \\q to exit. '
\set version 'SELECT version();'
\set extensions 'select * from pg_available_extensions;'
\set active 'select pid,client_addr,client_port,waiting,state,substring(query for 100) as query from pg_stat_activity where state != ''idle'';'
\set top5 'select substring(query for 100) as query, to_char(total_time/1000/60, ''999999990D'') as total_min, to_char(calls, ''999999990D'') as calls, to_char(total_time/calls, ''999999990D'') lat_ms, to_char(rows, ''999999990D'') as rows from pg_stat_statements order by total_time desc limit 5;'
\set top5all 'select  query, to_char(total_time/1000/60, ''999999990D'') as total_min, to_char(calls, ''999999990D'') as calls, to_char(total_time/calls, ''999999990D'') lat_ms, to_char(rows, ''999999990D'') as rows from pg_stat_statements order by total_time desc limit 5;'
SET search_path TO public,extensions
\timing
