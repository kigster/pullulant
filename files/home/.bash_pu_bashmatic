export BASHMATIC_HOME="${BASHMATIC_HOME:-${HOME}/.bashmatic}"

function pu-bashmatic-install() {
  local flags=" -q "
  [[ -n ${BASHMATIC_VERBOSE} ]]       && flags=" -v "
  [[ -n ${BASHMATIC_SKIP_ON_LOGIN} ]] && flags=" ${flags} -l "

  if [[ -z ${NO_BASHMATIC} ]] ; then
    [[ -d ${BASHMATIC_HOME} ]] || bash -c "$(curl -fsSL https://bashmatic.re1.re); bashmatic-install ${flags}" 2>&1 >/dev/null
    [[ -d ${BASHMATIC_HOME} ]] && source "${BASHMATIC_HOME}/init.sh"
  fi
}

pu-bashmatic-install
