#!/usr/bin/env bash

[[ -f ~/.bazel/bin/bazel-complete.bash ]] && source ~/.bazel/bin/bazel-complete.bash

alias bb='bazel build'
alias bba='bazel build //...:all'
alias bbr='bazel run'
alias bbx='bazel clean --expunge'
alias bbq='bazel query'
alias bbt='bazel test'
alias bbqa='bazel query //...:all'
alias buildcop="find . -type f -name 'BUILD*' -or -name WORKSPACE -or -name '*.bzl' | xargs buildifier -v"
