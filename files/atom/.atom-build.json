{
  "cmd": "bundle exec rspec",
  "name": "Run All Specs",
  "args": [ "-c", "-b", "-p 1", "--format progress", "--color"],
  "keymap": "ctrl-cmd-r",
  "sh": true,
  "errorMatch": [
    "rspec (?<file>[\\/0-9a-zA-Z\\._]+):(?<line>\\d+) #",
    "# (?<file>\\./.*):(?<line>\\d+)",
    "\\s+from (?<file>\\./.*):(?<line>\\d+)",
    "`(require|load)': (?<file>\\./.*):(?<line>\\d+)",
    "^(<file>/.*):(?<line>\\d+)"
  ],
  "targets": {
    "Run Current Spec": {
      "cmd": "bundle exec rspec {FILE_ACTIVE}",
      "sh": false,
      "keymap": "ctrl-cmd-snift-r"
    }
  }
}
