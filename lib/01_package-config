#!/usr/bin/env bash

function package-config {

  # List of Brew Formulas to install and link
  export brew_packages="
    rbenv
    ruby-build
    watch
    git
    bash
    node
    npm
    homebrew/dupes/rsync
    bash-completion
    redis
    nginx
    libxml2
    libxslt
    libiconv
    libzip
    zlib
    zsh
    openssl
    libmemcached
    vim
    wget
    htop
    pcre
    nmap
    hub
    ack
    haproxy
    qt
    the_silver_searcher
    imagemagick
    pstree
    tree
    pyenv
    awscli
    awsebcli
    aws-as
    aws-cloudsearch
    aws-elasticbeanstalk
    aws-elasticache
    aws-mon
    jq
    cmake
    Caskroom/cask/clion
    Caskroom/cask/webstorm
    Caskroom/cask/rubymine
    Caskroom/cask/shiftit
    Caskroom/cask/istat-menus
    Caskroom/cask/iterm2
    Caskroom/cask/slack
    Caskroom/cask/gitx
    Caskroom/cask/google-chrome
    Caskroom/cask/google-drive
    Caskroom/cask/google-hangouts
    Caskroom/cask/atom
    Caskroom/cask/virtualbox
    Caskroom/cask/slack
    Caskroom/cask/dockertoolbox
    Caskroom/cask/docker
    Caskroom/cask/docker-compose
    Caskroom/cask/docker-swarm
    Caskroom/cask/kitematic
    Caskroom/cask/java
    Caskroom/cask/teamviewer
  "

  export brew_relink_packages="
    libxml2
    libxslt
    libiconv
    libzip
    zlib
    openssl
  "
  # these hosts will be added to /etc/hosts as 127.0.0.1
  export local_hosts="
  "

  # these nodejs modules will be install using npm
  export nodejs_modules="
    bower
    ember-cli
  "

  # This is the ruby version that will be installed using rbenv
  # the first one is the default
  rbenv_ruby_versions=("2.3.0" "2.2.3")
}

package-config
